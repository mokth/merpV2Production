<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="INVOICE"
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/butSecond"
            android:textSize="24sp"
            android:height="80dp"
            android:drawableLeft="@drawable/shop" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="CREDIT NOTE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/bill"
            android:id="@+id/butcnnote" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="TRANSACTION LIST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/shoplist"
            android:id="@+id/butInvlist" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="MASTER ITEM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/item"
            android:id="@+id/butMaster" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="DOWNLOAD/UPLOAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/download"
            android:id="@+id/butDown" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="SETTINGS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/settings"
            android:id="@+id/butsetting" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="ABOUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/about"
            android:id="@+id/butAbout" />
        <Button
            android:background="@drawable/bluethem_btn_default_holo_light"
            android:text="EXIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/exit"
            android:id="@+id/butOut" />
    </LinearLayout>
</ScrollView>